<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalendarEntryActivity" >

    <TextView
        android:id="@+id/calendarEntryActivityTitleHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/calendarEntryActivityTitleHeader"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/calendarEntryActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/calendarEntryActivityTitleSeperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/calendarEntryActivityTitleHeader"
        android:scaleType="fitXY"
        android:src="?android:attr/listDivider" />

    <TextView
        android:id="@+id/calendarEntryActivityDescriptionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/calendarEntryActivityTitleSeperator"
        android:text="@string/calendarEntryActivityDescriptionHeader"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/calendarEntryActivityDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/calendarEntryActivityTitleSeperator"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/calendarEntryActivityDescriptionSeperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/calendarEntryActivityDescriptionHeader"
        android:scaleType="fitXY"
        android:src="?android:attr/listDivider" />

    <TextView
        android:id="@+id/calendarEntryActivityRoomLocationHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/calendarEntryActivityDescriptionSeperator"
        android:text="@string/calendarEntryActivityRoomLocationHeader"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/calendarEntryActivityRoomLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/calendarEntryActivityDescriptionSeperator"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/calendarEntryActivityRoomLocationSeperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/calendarEntryActivityRoomLocationHeader"
        android:scaleType="fitXY"
        android:src="?android:attr/listDivider" />

    <TextView
        android:id="@+id/calendarEntryActivityStartDateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/calendarEntryActivityRoomLocationSeperator"
        android:text="@string/calendarEntryActivityStartDateHeader"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/calendarEntryActivityStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/calendarEntryActivityRoomLocationSeperator"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/calendarEntryActivityStartDateSeperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/calendarEntryActivityStartDateHeader"
        android:scaleType="fitXY"
        android:src="?android:attr/listDivider" />

    <TextView
        android:id="@+id/calendarEntryActivityEndDateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/calendarEntryActivityStartDateSeperator"
        android:text="@string/calendarEntryActivityEndDateHeader"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/calendarEntryActivityEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/calendarEntryActivityStartDateSeperator"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/calendarEntryActivityEndDateSeperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/calendarEntryActivityEndDateHeader"
        android:scaleType="fitXY"
        android:src="?android:attr/listDivider" />

    <TextView
        android:id="@+id/calendarEntryActivityInvitationsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarEntryActivityEndDateSeperator"
        android:text="@string/calendarEntryActivityInvitationsHeader"
        android:textSize="20sp" />
    <ListView
        android:id="@+id/calendarEntryActivityInvitationsList"
           android:layout_below="@id/calendarEntryActivityInvitationsHeader"
        android:layout_width="fill_parent"
           android:layout_height="wrap_content"
        >
        
    </ListView>

</RelativeLayout>